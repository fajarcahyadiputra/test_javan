
  <!-- Modal -->
  <div class="modal fade" id="modalAdd" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Modal Add Data Asset keluarga</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form action="/assets-keluarga" method="post">
            <div class="modal-body">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input required type="text" name="nama" class="form-control" id="name" >
                    <input required type="hidden" name="keluarga_id" value="<%= keluarga.id %>">
                </div>
                <div class="form-group">
                  <label for="harga_satuan">Harga Satuan</label>
                  <input required type="number" name="harga_satuan" class="form-control" id="harga_satuan" >
               </div>
               <div class="form-group">
                <label for="jumlah">jumlah</label>
                <input required type="number" name="jumlah" class="form-control" id="jumlah" >
             </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
      </div>
    </div>
  </div>